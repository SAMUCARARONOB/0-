local Ranox, ts, plr = {}, game:GetService("TweenService"), game.Players.LocalPlayer
local gui = Instance.new("ScreenGui", plr:WaitForChild("PlayerGui"))
gui.Name, gui.IgnoreGuiInset, gui.ResetOnSpawn = "RanoxUI", true, false

local main = Instance.new("Frame", gui)
main.Size, main.Position, main.AnchorPoint = UDim2.new(0, 575, 0, 380), UDim2.new(0.5, 0, 0.5, 0), Vector2.new(0.5, 0.5)
main.BackgroundColor3, main.BorderSizePixel, main.Active, main.Draggable = Color3.fromRGB(15, 15, 20), 0, true, true
Instance.new("UICorner", main).CornerRadius = UDim.new(0, 12)

local header = Instance.new("Frame", main)
header.Size, header.BackgroundColor3 = UDim2.new(1, 0, 0, 36), Color3.fromRGB(25, 25, 35)
local title = Instance.new("TextLabel", header)
title.Text, title.Size, title.Position = "RANOX", UDim2.new(1, -36, 1, 0), UDim2.new(0, 12, 0, 0)
title.BackgroundTransparency, title.TextColor3, title.Font, title.TextSize, title.TextXAlignment = 1, Color3.new(1, 1, 1), Enum.Font.GothamBold, 20, Enum.TextXAlignment.Left

local tabHolder = Instance.new("Frame", main)
tabHolder.Size, tabHolder.Position, tabHolder.BackgroundColor3 = UDim2.new(1, 0, 0, 36), UDim2.new(0, 0, 0, 36), Color3.fromRGB(20, 20, 30)
local tabLayout = Instance.new("UIListLayout", tabHolder)
tabLayout.FillDirection, tabLayout.Padding, tabLayout.SortOrder = Enum.FillDirection.Horizontal, UDim.new(0, 6), Enum.SortOrder.LayoutOrder

local pages = Instance.new("Frame", main)
pages.Size, pages.Position, pages.BackgroundTransparency, pages.ClipsDescendants = UDim2.new(1, 0, 1, -72), UDim2.new(0, 0, 0, 72), 1, true

local tabs = {}
local first = nil

function Ranox:CreateWindow(cfg)
    title.Text = cfg.Name or "RANOX"
    return {
        CreateTab = function(_, name)
            local btn = Instance.new("TextButton", tabHolder)
            btn.Text, btn.Size = name, UDim2.new(0, 110, 0, 32)
            btn.BackgroundColor3, btn.TextColor3, btn.Font, btn.TextSize, btn.AutoButtonColor = Color3.fromRGB(35, 35, 45), Color3.new(1, 1, 1), Enum.Font.GothamSemibold, 14, false
            Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 8)

            local sc = Instance.new("ScrollingFrame", pages)
            sc.Size, sc.Position = UDim2.new(1, -10, 1, -10), UDim2.new(0, 5, 0, 5)
            sc.CanvasSize, sc.ScrollBarThickness, sc.ScrollingDirection, sc.BackgroundTransparency, sc.BorderSizePixel, sc.Visible = UDim2.new(0, 0, 0, 0), 6, Enum.ScrollingDirection.Y, 1, 0, false

            btn.MouseButton1Click:Connect(function()
                for _, t in pairs(tabs) do t.Visible = false end
                sc.Visible = true
            end)
            table.insert(tabs, sc)
            if not first then first = sc; sc.Visible = true end

            local buttonY = 0

            return {
                CreateButton = function(_, bcfg)
                    local row = Instance.new("Frame", sc)
                    row.Size, row.Position = UDim2.new(1, 0, 0, 40), UDim2.new(0, 0, 0, buttonY)
                    row.BackgroundTransparency = 1

                    local left = Instance.new("TextButton", row)
                    left.Size, left.Position = UDim2.new(0.5, -6, 1, 0), UDim2.new(0, 0, 0, 0)
                    left.BackgroundColor3, left.Text, left.Font, left.TextSize, left.TextColor3 = Color3.fromRGB(35, 35, 50), bcfg.Name or "Bot√£o", Enum.Font.Gotham, 14, Color3.new(1, 1, 1)
                    Instance.new("UICorner", left).CornerRadius = UDim.new(0, 8)
                    left.MouseEnter:Connect(function() left.BackgroundColor3 = Color3.fromRGB(55, 85, 115) end)
                    left.MouseLeave:Connect(function() left.BackgroundColor3 = Color3.fromRGB(35, 35, 50) end)
                    if bcfg.Callback then left.MouseButton1Click:Connect(bcfg.Callback) end

                    local right = Instance.new("TextButton", row)
                    right.Size, right.Position = UDim2.new(0.5, -6, 1, 0), UDim2.new(0.5, 6, 0, 0)
                    right.BackgroundColor3, right.Text, right.Font, right.TextSize, right.TextColor3 = Color3.fromRGB(35, 35, 50), bcfg.Second or "Outro", Enum.Font.Gotham, 14, Color3.new(1, 1, 1)
                    Instance.new("UICorner", right).CornerRadius = UDim.new(0, 8)
                    right.MouseEnter:Connect(function() right.BackgroundColor3 = Color3.fromRGB(55, 85, 115) end)
                    right.MouseLeave:Connect(function() right.BackgroundColor3 = Color3.fromRGB(35, 35, 50) end)
                    if bcfg.SecondCallback then right.MouseButton1Click:Connect(bcfg.SecondCallback) end

                    buttonY += 44
                    sc.CanvasSize = UDim2.new(0, 0, 0, buttonY)
                end
            }
        end
    }
end

return Ranox
