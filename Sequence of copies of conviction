local UIS=game:GetService("UserInputService")local frame=Instance.new("Frame")frame.Size=UDim2.new(0.9,0,0.9,0)frame.Position=UDim2.new(0.05,0,0.05,0)frame.BackgroundColor3=Color3.fromRGB(50,50,50)frame.BorderSizePixel=2 frame.BorderColor3=Color3.fromRGB(255,255,255)frame.Parent=game.Players.LocalPlayer.PlayerGui:WaitForChild("ScreenGui")local title=Instance.new("TextLabel")title.Text="Coordenadas"title.Font=Enum.Font.GothamBold title.TextSize=24 title.Size=UDim2.new(0.9,0,0.1,0)title.Position=UDim2.new(0,0,0,0)title.BackgroundColor3=Color3.fromRGB(30,30,30)title.TextColor3=Color3.fromRGB(255,255,255)title.BorderSizePixel=0 title.Parent=frame local hideButton=Instance.new("TextButton")hideButton.Text="Ocultar" hideButton.Font=Enum.Font.Gotham hideButton.TextSize=18 hideButton.Size=UDim2.new(0.05,0,0.05,0)hideButton.Position=UDim2.new(0.95,0,0,0)hideButton.BackgroundColor3=Color3.fromRGB(255,0,0)hideButton.TextColor3=Color3.fromRGB(255,255,255)hideButton.BorderSizePixel=0 hideButton.Parent=frame local hidden=false local hiddenFramePosition=frame.Position hideButton.MouseButton1Click:Connect(function() hidden=not hidden if hidden then hiddenFramePosition=frame.Position frame.Visible=false hideButton.Text="Mostrar" hideButton.Size=UDim2.new(0.05,0,0.05,0) hideButton.Position=UDim2.new(0.95,0,-0.1,0) hideButton.Parent=game.Players.LocalPlayer.PlayerGui:WaitForChild("ScreenGui") else frame.Visible=true frame.Position=hiddenFramePosition hideButton.Text="Ocultar" hideButton.Size=UDim2.new(0.05,0,0.05,0) hideButton.Position=UDim2.new(0.95,0,0,0) hideButton.Parent=frame end end) local dragging local dragInput local dragStart local startPos local function update(input) local delta=input.Position-dragStart hideButton.Position=UDim2.new(startPos.X.Scale,startPos.X.Offset+delta.X,startPos.Y.Scale,startPos.Y.Offset+delta.Y) end hideButton.InputBegan:Connect(function(input) if input.UserInputType==Enum.UserInputType.MouseButton1 or input.UserInputType.Touch then dragging=true dragStart=input.Position startPos=hideButton.Position input.Changed:Connect(function() if input.UserInputState==Enum.UserInputState.End then dragging=false end end) end end) hideButton.InputChanged:Connect(function(input) if input.UserInputType==Enum.UserInputType.MouseMovement or input.UserInputType.Touch then dragInput=input end end) UIS.InputChanged:Connect(function(input) if input==dragInput and dragging then update(input) end end) local coordLabel=Instance.new("TextLabel") coordLabel.Text="Coordenadas Atuais: " coordLabel.Font=Enum.Font.Gotham coordLabel.TextSize=18 coordLabel.Size=UDim2.new(0.6,-10,0.2,-10) coordLabel.Position=UDim2.new(0,5,0.1,5) coordLabel.BackgroundColor3=Color3.fromRGB(50,50,50) coordLabel.TextColor3=Color3.fromRGB(255,255,255) coordLabel.BorderSizePixel=0 coordLabel.TextWrapped=true coordLabel.TextXAlignment=Enum.TextXAlignment.Left coordLabel.Parent=frame local coordList=Instance.new("TextBox") coordList.Text="local coords = {\n}" coordList.Font=Enum.Font.Code coordList.TextSize=16 coordList.MultiLine=true coordList.Size=UDim2.new(0.6,-10,0.6,-10) coordList.Position=UDim2.new(0,5,0.3,5) coordList.BackgroundColor3=Color3.fromRGB(60,60,60) coordList.TextColor3=Color3.fromRGB(255,255,255) coordList.BorderSizePixel=0 coordList.TextXAlignment=Enum.TextXAlignment.Left coordList.TextYAlignment=Enum.TextYAlignment.Top coordList.ClearTextOnFocus=false coordList.TextEditable=false coordList.Parent=frame local copyButton=Instance.new("TextButton") copyButton.Text="Copiar Coordenadas" copyButton.Font=Enum.Font.Gotham copyButton.TextSize=18 copyButton.Size=UDim2.new(0.3,-10,0.1,-10) copyButton.Position=UDim2.new(0.65,5,0.3,5) copyButton.BackgroundColor3=Color3.fromRGB(30,30,30) copyButton.TextColor3=Color3.fromRGB(255,255,255) copyButton.BorderSizePixel=0 copyButton.Parent=frame local clearButton=Instance.new("TextButton") clearButton.Text="Limpar Coordenadas" clearButton.Font=Enum.Font.Gotham clearButton.TextSize=18 clearButton.Size=UDim2.new(0.3,-10,0.1,-10) clearButton.Position=UDim2.new(0.65,5,0.45,5) clearButton.BackgroundColor3=Color3.fromRGB(30,30,30) clearButton.TextColor3=Color3.fromRGB(255,255,255) clearButton.BorderSizePixel=0 clearButton.Parent=frame local toggleButton=Instance.new("TextButton") toggleButton.Text="Iniciar Coordenadas" toggleButton.Font=Enum.Font.Gotham toggleButton.TextSize=18 toggleButton.Size=UDim2.new(0.3,-10,0.1,-10) toggleButton.Position=UDim2.new(0.65,5,0.6,5) toggleButton.BackgroundColor3=Color3.fromRGB(30,30,30) toggleButton.TextColor3=Color3.fromRGB(255,255,255) toggleButton.BorderSizePixel=0 toggleButton.Parent=frame local updatingCoords=false local coords={} local lastCoord=Vector3.new(0,0,0) copyButton.MouseButton1Click:Connect(function() setclipboard(coordList.Text) end) clearButton.MouseButton1Click:Connect(function() coords={} lastCoord=Vector3.new(0,0,0) coordList.Text="local coords = {\n}" coordLabel.Text="Coordenadas Atuais: " end) local function addCoord(coord) local distance=(coord-lastCoord).magnitude if distance>1 then table.insert(coords,{coord.X,coord.Y,coord.Z}) lastCoord=coord end local text="local coords = {\n" for _,c in ipairs(coords) do text=text..string.format("    {%.2f, %.2f, %.2f},\n",c[1],c[2],c[3]) end text=text.."}" coordList.Text=text end toggleButton.MouseButton1Click:Connect(function() updatingCoords=not updatingCoords if updatingCoords then toggleButton.Text="Parar Coordenadas" else toggleButton.Text="Iniciar Coordenadas" end end) local RunService=game:GetService("RunService") local lastUpdate=tick() RunService.RenderStepped:Connect(function() if updatingCoords then local character=game.Players.LocalPlayer.Character if character and character:FindFirstChild("HumanoidRootPart") then local coord=character.HumanoidRootPart.Position coordLabel.Text="Coordenadas Atuais: "..string.format("{%.2f, %.2f, %.2f}",coord.X,coord.Y,coord.Z) if tick()-lastUpdate>=0.8 then addCoord(coord) lastUpdate=tick() end end end end)
