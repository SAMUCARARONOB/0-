-- RANOX UI - Moderna e super detalhada (estilo Rayfield/REDZHUB) -- Criada para ser modular, linda e fácil de usar -- Salve este arquivo como: ranox-ui.lua

local TweenService = game:GetService("TweenService") local UserInputService = game:GetService("UserInputService") local RANOX = {}

function RANOX:CreateWindow(cfg) local UI = {} local screenGui = Instance.new("ScreenGui") screenGui.Name = "RANOX_UI" screenGui.ResetOnSpawn = false screenGui.Parent = game:GetService("CoreGui")

local main = Instance.new("Frame")
main.Size = UDim2.new(0, 500, 0, 400)
main.Position = UDim2.new(0.5, -250, 0.5, -200)
main.BackgroundColor3 = Color3.fromRGB(18, 18, 20)
main.BorderSizePixel = 0
main.AnchorPoint = Vector2.new(0.5, 0.5)
main.Parent = screenGui

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 40)
title.BackgroundTransparency = 1
title.Text = cfg.Name or "RANOX UI"
title.Font = Enum.Font.GothamBold
title.TextSize = 20
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Parent = main

local tabsFrame = Instance.new("Frame")
tabsFrame.Size = UDim2.new(0, 120, 1, -40)
tabsFrame.Position = UDim2.new(0, 0, 0, 40)
tabsFrame.BackgroundColor3 = Color3.fromRGB(24, 24, 28)
tabsFrame.BorderSizePixel = 0
tabsFrame.Parent = main

local contentFrame = Instance.new("Frame")
contentFrame.Size = UDim2.new(1, -120, 1, -40)
contentFrame.Position = UDim2.new(0, 120, 0, 40)
contentFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 35)
contentFrame.BorderSizePixel = 0
contentFrame.Parent = main

local tabs = {}

function UI:CreateTab(tabName)
    local tabButton = Instance.new("TextButton")
    tabButton.Size = UDim2.new(1, 0, 0, 35)
    tabButton.BackgroundTransparency = 1
    tabButton.Text = tabName
    tabButton.Font = Enum.Font.Gotham
    tabButton.TextSize = 16
    tabButton.TextColor3 = Color3.fromRGB(180, 180, 180)
    tabButton.Parent = tabsFrame

    local tabContent = Instance.new("Frame")
    tabContent.Size = UDim2.new(1, 0, 1, 0)
    tabContent.Visible = false
    tabContent.BackgroundTransparency = 1
    tabContent.Parent = contentFrame

    tabButton.MouseButton1Click:Connect(function()
        for _, tab in pairs(tabs) do
            tab.Content.Visible = false
            tab.Button.TextColor3 = Color3.fromRGB(180, 180, 180)
        end
        tabContent.Visible = true
        tabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    end)

    table.insert(tabs, { Button = tabButton, Content = tabContent })

    if #tabs == 1 then
        tabButton:Activate()
        tabContent.Visible = true
        tabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    end

    return tabContent
end

function UI:CreateSection(tab, titleText)
    local section = Instance.new("Frame")
    section.Size = UDim2.new(1, 0, 0, 0)
    section.BackgroundTransparency = 1
    section.AutomaticSize = Enum.AutomaticSize.Y
    section.Parent = tab

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, 0, 0, 30)
    label.BackgroundTransparency = 1
    label.Text = titleText
    label.Font = Enum.Font.GothamBold
    label.TextSize = 18
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = section

    return section
end

function UI:CreateToggle(section, name, callback)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, -10, 0, 30)
    button.Position = UDim2.new(0, 5, 0, 35)
    button.BackgroundColor3 = Color3.fromRGB(40, 40, 45)
    button.Text = "[ OFF ]  " .. name
    button.Font = Enum.Font.Gotham
    button.TextSize = 14
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Parent = section

    local state = false
    button.MouseButton1Click:Connect(function()
        state = not state
        button.Text = (state and "[ ON  ]  " or "[ OFF ]  ") .. name
        callback(state)
    end)
end

function UI:CreateButton(section, text, callback)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, -10, 0, 30)
    button.Position = UDim2.new(0, 5, 0, 75)
    button.BackgroundColor3 = Color3.fromRGB(60, 60, 70)
    button.Text = text
    button.Font = Enum.Font.Gotham
    button.TextSize = 14
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Parent = section

    button.MouseButton1Click:Connect(function()
        callback()
    end)
end

function UI:CreateSlider(section, name, min, max, default, callback)
    local slider = Instance.new("TextButton")
    slider.Size = UDim2.new(1, -10, 0, 30)
    slider.Position = UDim2.new(0, 5, 0, 115)
    slider.BackgroundColor3 = Color3.fromRGB(50, 50, 55)
    slider.Text = name .. ": " .. tostring(default)
    slider.Font = Enum.Font.Gotham
    slider.TextSize = 14
    slider.TextColor3 = Color3.fromRGB(255, 255, 255)
    slider.Parent = section

    local value = default
    slider.MouseButton1Click:Connect(function()
        value = math.clamp(value + 1, min, max)
        slider.Text = name .. ": " .. tostring(value)
        callback(value)
    end)
end

function UI:CreateDropdown(section, name, options, callback)
    local dropdown = Instance.new("TextButton")
    dropdown.Size = UDim2.new(1, -10, 0, 30)
    dropdown.Position = UDim2.new(0, 5, 0, 155)
    dropdown.BackgroundColor3 = Color3.fromRGB(45, 45, 50)
    dropdown.Text = name .. " ▼"
    dropdown.Font = Enum.Font.Gotham
    dropdown.TextSize = 14
    dropdown.TextColor3 = Color3.fromRGB(255, 255, 255)
    dropdown.Parent = section

    local open = false
    local menu = Instance.new("Frame")
    menu.Size = UDim2.new(1, -10, 0, #options * 25)
    menu.Position = UDim2.new(0, 5, 0, 190)
    menu.BackgroundColor3 = Color3.fromRGB(35, 35, 40)
    menu.Visible = false
    menu.Parent = section

    for _, option in ipairs(options) do
        local opt = Instance.new("TextButton")
        opt.Size = UDim2.new(1, 0, 0, 25)
        opt.Text = option
        opt.BackgroundTransparency = 1
        opt.Font = Enum.Font.Gotham
        opt.TextSize = 14
        opt.TextColor3 = Color3.fromRGB(255, 255, 255)
        opt.Parent = menu
        opt.MouseButton1Click:Connect(function()
            dropdown.Text = name .. ": " .. option
            menu.Visible = false
            open = false
            callback(option)
        end)
    end

    dropdown.MouseButton1Click:Connect(function()
        open = not open
        menu.Visible = open
    end)
end

return UI

end

return RANOX
