-- RANOX UI ADVANCED - Interface super moderna com estilo Rayfield + REDZHUB DARK -- Desenvolvido para Roblox - Funciona em PC e celular, com drag, estilo neon/dark, abas, seções, e muito mais

local TweenService = game:GetService("TweenService") local UserInputService = game:GetService("UserInputService") local RunService = game:GetService("RunService")

local RANOX = {}

function RANOX:CreateWindow(config) local UI = {} local dragging, dragInput, dragStart, startPos

local gui = Instance.new("ScreenGui")
gui.Name = "RANOX_UI_ADVANCED"
gui.ZIndexBehavior = Enum.ZIndexBehavior.Global
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true
gui.Parent = game:GetService("CoreGui")

local main = Instance.new("Frame")
main.Name = "MainWindow"
main.Size = UDim2.new(0, 600, 0, 450)
main.Position = UDim2.new(0.5, 0, 0.5, 0)
main.BackgroundColor3 = Color3.fromRGB(20, 20, 25)
main.BorderSizePixel = 0
main.AnchorPoint = Vector2.new(0.5, 0.5)
main.Active = true
main.Draggable = false
main.Parent = gui

-- Shadow
local shadow = Instance.new("ImageLabel")
shadow.BackgroundTransparency = 1
shadow.Image = "rbxassetid://1316045217"
shadow.ImageTransparency = 0.5
shadow.Size = UDim2.new(1, 30, 1, 30)
shadow.Position = UDim2.new(0, -15, 0, -15)
shadow.ZIndex = 0
shadow.Parent = main

-- Drag system (mobile + PC)
local function makeDraggable(frame)
    frame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position

            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)

    frame.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
            dragInput = input
        end
    end)

    RunService.RenderStepped:Connect(function()
        if dragging and dragInput then
            local delta = dragInput.Position - dragStart
            frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
end

makeDraggable(main)

local title = Instance.new("TextLabel")
title.Name = "TitleBar"
title.Size = UDim2.new(1, 0, 0, 40)
title.BackgroundColor3 = Color3.fromRGB(25, 25, 30)
title.Text = config.Name or "RANOX UI v3.0"
title.Font = Enum.Font.GothamBold
title.TextSize = 18
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.TextXAlignment = Enum.TextXAlignment.Center
title.Parent = main

local tabHolder = Instance.new("Frame")
tabHolder.Name = "Tabs"
tabHolder.Size = UDim2.new(0, 140, 1, -40)
tabHolder.Position = UDim2.new(0, 0, 0, 40)
tabHolder.BackgroundColor3 = Color3.fromRGB(30, 30, 35)
tabHolder.BorderSizePixel = 0
tabHolder.Parent = main

local pageHolder = Instance.new("Frame")
pageHolder.Name = "Pages"
pageHolder.Size = UDim2.new(1, -140, 1, -40)
pageHolder.Position = UDim2.new(0, 140, 0, 40)
pageHolder.BackgroundColor3 = Color3.fromRGB(35, 35, 40)
pageHolder.BorderSizePixel = 0
pageHolder.ClipsDescendants = true
pageHolder.Parent = main

local tabs = {}
function UI:CreateTab(name)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, 0, 0, 35)
    button.BackgroundColor3 = Color3.fromRGB(40, 40, 45)
    button.Text = name
    button.Font = Enum.Font.Gotham
    button.TextSize = 14
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Parent = tabHolder

    local page = Instance.new("ScrollingFrame")
    page.Name = name .. "_Page"
    page.Size = UDim2.new(1, 0, 1, 0)
    page.CanvasSize = UDim2.new(0, 0, 10, 0)
    page.BackgroundTransparency = 1
    page.Visible = false
    page.BorderSizePixel = 0
    page.ScrollBarThickness = 6
    page.Parent = pageHolder

    button.MouseButton1Click:Connect(function()
        for _, tab in pairs(tabs) do
            tab.page.Visible = false
            tab.button.BackgroundColor3 = Color3.fromRGB(40, 40, 45)
        end
        page.Visible = true
        button.BackgroundColor3 = Color3.fromRGB(60, 60, 70)
    end)

    if #tabs == 0 then
        page.Visible = true
        button.BackgroundColor3 = Color3.fromRGB(60, 60, 70)
    end

    table.insert(tabs, {button = button, page = page})
    return page
end

function UI:CreateSection(tab, name)
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, -20, 0, 30)
    label.Position = UDim2.new(0, 10, 0, 0)
    label.BackgroundTransparency = 1
    label.Text = name
    label.Font = Enum.Font.GothamBold
    label.TextSize = 16
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = tab
    return tab
end

function UI:CreateButton(tab, name, callback)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, -20, 0, 30)
    btn.Position = UDim2.new(0, 10, 0, tab.UIListLayout.AbsoluteContentSize.Y + 40)
    btn.BackgroundColor3 = Color3.fromRGB(55, 55, 60)
    btn.Text = name
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 14
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Parent = tab

    btn.MouseButton1Click:Connect(function()
        callback()
    end)
end

return UI

end

return RANOX
