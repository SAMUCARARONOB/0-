local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local Library = {}
Library.Enabled = true

local DARK_THEME = {
    Background = Color3.fromRGB(18, 18, 24),
    Card = Color3.fromRGB(30, 30, 42),
    Header = Color3.fromRGB(25, 25, 35),
    Primary = Color3.fromRGB(132, 94, 247),
    Secondary = Color3.fromRGB(45, 45, 60),
    Text = Color3.fromRGB(240, 240, 255),
    Border = Color3.fromRGB(60, 60, 80),
    Success = Color3.fromRGB(76, 209, 96),
    Error = Color3.fromRGB(255, 95, 95)
}

-- Função para centralizar elementos
local function centerPosition(frame)
    return UDim2.new(0.5, -frame.Size.X.Offset/2, 0.5, -frame.Size.Y.Offset/2)
end

function Library:CreateWindow(name)
    local player = Players.LocalPlayer
    local gui = Instance.new("ScreenGui")
    gui.Name = "DarkSpawnerPremium"
    gui.ResetOnSpawn = false
    gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    gui.IgnoreGuiInset = true
    gui.Parent = player:WaitForChild("PlayerGui")
    
    -- Frame principal com tamanho adaptável para mobile
    local mainFrame = Instance.new("Frame")
    mainFrame.Name = "MainFrame"
    mainFrame.Size = UDim2.new(0, 350, 0, 500) -- Tamanho reduzido para mobile
    mainFrame.Position = centerPosition(mainFrame) -- Centralizado
    mainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
    mainFrame.BackgroundColor3 = DARK_THEME.Background
    mainFrame.ClipsDescendants = true
    mainFrame.Parent = gui
    
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 12)
    corner.Parent = mainFrame
    
    -- Header
    local header = Instance.new("Frame")
    header.Name = "Header"
    header.Size = UDim2.new(1, 0, 0, 50)
    header.BackgroundColor3 = DARK_THEME.Header
    header.BorderSizePixel = 0
    header.ZIndex = 10
    header.Parent = mainFrame
    
    local headerCorner = Instance.new("UICorner")
    headerCorner.CornerRadius = UDim.new(0, 12)
    headerCorner.Parent = header
    
    local title = Instance.new("TextLabel")
    title.Name = "Title"
    title.Size = UDim2.new(0, 200, 1, 0)
    title.Position = centerPosition(title)
    title.AnchorPoint = Vector2.new(0.5, 0)
    title.BackgroundTransparency = 1
    title.Text = name
    title.TextColor3 = DARK_THEME.Primary
    title.Font = Enum.Font.GothamBold
    title.TextSize = 22 -- Tamanho reduzido para mobile
    title.ZIndex = 10
    title.Parent = header
    
    -- Botão de fechar
    local closeButton = Instance.new("ImageButton")
    closeButton.Name = "CloseButton"
    closeButton.Size = UDim2.new(0, 30, 0, 30) -- Tamanho maior para mobile
    closeButton.Position = UDim2.new(1, -40, 0.5, -15)
    closeButton.BackgroundColor3 = DARK_THEME.Secondary
    closeButton.BorderSizePixel = 0
    closeButton.ZIndex = 10
    closeButton.Image = "rbxassetid://3926307971"
    closeButton.ImageRectOffset = Vector2.new(284, 4)
    closeButton.ImageRectSize = Vector2.new(24, 24)
    closeButton.ImageColor3 = DARK_THEME.Text
    closeButton.Parent = header
    
    local closeCorner = Instance.new("UICorner")
    closeCorner.CornerRadius = UDim.new(0, 8)
    closeCorner.Parent = closeButton
    
    closeButton.MouseButton1Click:Connect(function()
        gui:Destroy()
        Library.Enabled = false
    end)
    
    -- Container de abas
    local tabsContainer = Instance.new("Frame")
    tabsContainer.Name = "Tabs"
    tabsContainer.Size = UDim2.new(1, -20, 0, 40) -- Ajustado para mobile
    tabsContainer.Position = UDim2.new(0.5, -tabsContainer.Size.X.Offset/2, 0, 60)
    tabsContainer.BackgroundTransparency = 1
    tabsContainer.Parent = mainFrame
    
    -- Frame de conteúdo
    local contentFrame = Instance.new("Frame")
    contentFrame.Name = "Content"
    contentFrame.Size = UDim2.new(1, -20, 1, -120) -- Ajustado para mobile
    contentFrame.Position = UDim2.new(0.5, -contentFrame.Size.X.Offset/2, 0, 110)
    contentFrame.BackgroundTransparency = 1
    contentFrame.Parent = mainFrame
    
    local uiListLayout = Instance.new("UIListLayout")
    uiListLayout.Padding = UDim.new(0, 8) -- Espaçamento menor para mobile
    uiListLayout.SortOrder = Enum.SortOrder.LayoutOrder
    uiListLayout.Parent = contentFrame
    
    -- Sistema de arraste otimizado para mobile
    local dragInput, dragStart, startPos
    local function updateDrag(input)
        local delta = input.Position - dragStart
        mainFrame.Position = UDim2.new(
            startPos.X.Scale,
            startPos.X.Offset + delta.X,
            startPos.Y.Scale,
            startPos.Y.Offset + delta.Y
        )
    end

    header.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.Touch or input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragStart = input.Position
            startPos = mainFrame.Position
            
            local connection
            connection = input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    connection:Disconnect()
                end
            end)
        end
    end)

    header.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.Touch or input.UserInputType == Enum.UserInputType.MouseMovement then
            dragInput = input
        end
    end)

    UserInputService.InputChanged:Connect(function(input)
        if input == dragInput then
            updateDrag(input)
        end
    end)
    
    -- Animação de entrada
    mainFrame.Position = UDim2.new(0.5, -175, 0, -600)
    local tween = TweenService:Create(mainFrame, TweenInfo.new(0.8, Enum.EasingStyle.Quint), 
        {Position = centerPosition(mainFrame)})
    tween:Play()
    
    -- Sistema de toggle com F9
    UserInputService.InputBegan:Connect(function(input, processed)
        if input.KeyCode == Enum.KeyCode.F9 then
            Library.Enabled = not Library.Enabled
            gui.Enabled = Library.Enabled
            
            if Library.Enabled then
                mainFrame.Position = UDim2.new(0.5, -175, 0, -600)
                local tween = TweenService:Create(mainFrame, TweenInfo.new(0.8, Enum.EasingStyle.Quint), 
                    {Position = centerPosition(mainFrame)})
                tween:Play()
            end
        end
    end)
    
    local Window = {}
    
    function Window:CreateTab(name, icon)
        local tabButton = Instance.new("TextButton")
        tabButton.Name = name
        tabButton.Size = UDim2.new(0.32, -5, 1, 0) -- Ajustado para mobile
        tabButton.BackgroundColor3 = DARK_THEME.Secondary
        tabButton.BorderSizePixel = 0
        tabButton.Text = icon .. " " .. name
        tabButton.TextColor3 = DARK_THEME.Text
        tabButton.Font = Enum.Font.GothamMedium
        tabButton.TextSize = 12 -- Tamanho menor para mobile
        tabButton.ZIndex = 5
        tabButton.Parent = tabsContainer
        
        local tabCorner = Instance.new("UICorner")
        tabCorner.CornerRadius = UDim.new(0, 6) -- Cantos mais suaves
        tabCorner.Parent = tabButton
        
        local indicator = Instance.new("Frame")
        indicator.Name = "Indicator"
        indicator.Size = UDim2.new(1, 0, 0, 3) -- Indicador mais fino
        indicator.Position = UDim2.new(0, 0, 1, -2)
        indicator.BackgroundColor3 = DARK_THEME.Primary
        indicator.BorderSizePixel = 0
        indicator.Visible = false
        indicator.ZIndex = 6
        indicator.Parent = tabButton
        
        local tabContent = Instance.new("ScrollingFrame")
        tabContent.Name = name .. "Content"
        tabContent.Size = UDim2.new(1, 0, 1, 0)
        tabContent.BackgroundTransparency = 1
        tabContent.Visible = false
        tabContent.ScrollBarThickness = 4 -- Mais fino para mobile
        tabContent.ScrollBarImageColor3 = DARK_THEME.Primary
        tabContent.Parent = contentFrame
        
        local tabLayout = Instance.new("UIListLayout")
        tabLayout.Padding = UDim.new(0, 10)
        tabLayout.SortOrder = Enum.SortOrder.LayoutOrder
        tabLayout.Parent = tabContent
        
        tabButton.MouseButton1Click:Connect(function()
            for _, tab in ipairs(tabsContainer:GetChildren()) do
                if tab:IsA("TextButton") then
                    tab.BackgroundColor3 = DARK_THEME.Secondary
                    if tab:FindFirstChild("Indicator") then
                        tab.Indicator.Visible = false
                    end
                end
            end
            tabButton.BackgroundColor3 = Color3.fromRGB(50, 50, 70)
            indicator.Visible = true
            
            for _, child in ipairs(contentFrame:GetChildren()) do
                if child:IsA("ScrollingFrame") then
                    child.Visible = false
                end
            end
            tabContent.Visible = true
        end)
        
        local Tab = {}
        
        function Tab:CreateToggle(config)
            local toggle = {}
            config.Text = config.Text or "Toggle"
            config.Default = config.Default or false
            config.Callback = config.Callback or function() end
            
            local toggleFrame = Instance.new("Frame")
            toggleFrame.Name = "ToggleFrame"
            toggleFrame.Size = UDim2.new(1, 0, 0, 36) -- Altura reduzida
            toggleFrame.BackgroundColor3 = DARK_THEME.Card
            toggleFrame.LayoutOrder = #tabContent:GetChildren() + 1
            toggleFrame.Parent = tabContent
            
            local corner = Instance.new("UICorner")
            corner.CornerRadius = UDim.new(0, 6)
            corner.Parent = toggleFrame
            
            local label = Instance.new("TextLabel")
            label.Name = "Label"
            label.Size = UDim2.new(0.7, -10, 1, 0)
            label.Position = UDim2.new(0, 10, 0, 0)
            label.BackgroundTransparency = 1
            label.Text = config.Text
            label.TextColor3 = DARK_THEME.Text
            label.Font = Enum.Font.Gotham
            label.TextSize = 14 -- Tamanho menor
            label.TextXAlignment = Enum.TextXAlignment.Left
            label.Parent = toggleFrame
            
            local toggleButton = Instance.new("TextButton")
            toggleButton.Name = "ToggleButton"
            toggleButton.Size = UDim2.new(0, 45, 0, 22) -- Tamanho menor
            toggleButton.Position = UDim2.new(1, -50, 0.5, -11)
            toggleButton.BackgroundColor3 = config.Default and DARK_THEME.Primary or DARK_THEME.Secondary
            toggleButton.AutoButtonColor = false
            toggleButton.Text = ""
            toggleButton.Parent = toggleFrame
            
            local toggleCorner = Instance.new("UICorner")
            toggleCorner.CornerRadius = UDim.new(0, 50)
            toggleCorner.Parent = toggleButton
            
            local toggleDot = Instance.new("Frame")
            toggleDot.Name = "ToggleDot"
            toggleDot.Size = UDim2.new(0, 18, 0, 18) -- Tamanho menor
            toggleDot.Position = config.Default and UDim2.new(1, -20, 0.5, -9) or UDim2.new(0, 2, 0.5, -9)
            toggleDot.BackgroundColor3 = Color3.new(1, 1, 1)
            toggleDot.Parent = toggleButton
            
            local dotCorner = Instance.new("UICorner")
            dotCorner.CornerRadius = UDim.new(0.5, 0)
            dotCorner.Parent = toggleDot
            
            toggleButton.MouseButton1Click:Connect(function()
                config.Default = not config.Default
                toggleButton.BackgroundColor3 = config.Default and DARK_THEME.Primary or DARK_THEME.Secondary
                
                local tweenInfo = TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
                local tween = TweenService:Create(
                    toggleDot,
                    tweenInfo,
                    {Position = config.Default and UDim2.new(1, -20, 0.5, -9) or UDim2.new(0, 2, 0.5, -9)}
                )
                tween:Play()
                
                config.Callback(config.Default)
            end)
            
            function toggle:SetValue(value)
                if config.Default ~= value then
                    config.Default = value
                    toggleButton.BackgroundColor3 = value and DARK_THEME.Primary or DARK_THEME.Secondary
                    
                    local tweenInfo = TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
                    local tween = TweenService:Create(
                        toggleDot,
                        tweenInfo,
                        {Position = value and UDim2.new(1, -20, 0.5, -9) or UDim2.new(0, 2, 0.5, -9)}
                    )
                    tween:Play()
                    
                    config.Callback(value)
                end
            end
            
            return toggle
        end
        
        function Tab:CreateButton(config)
            config.Text = config.Text or "Button"
            config.Callback = config.Callback or function() end
            
            local button = Instance.new("TextButton")
            button.Name = "Button"
            button.Size = UDim2.new(1, 0, 0, 40) -- Altura reduzida
            button.BackgroundColor3 = DARK_THEME.Primary
            button.Text = config.Text
            button.TextColor3 = Color3.new(1, 1, 1)
            button.Font = Enum.Font.GothamBold
            button.TextSize = 15 -- Tamanho menor
            button.LayoutOrder = #tabContent:GetChildren() + 1
            button.Parent = tabContent
            
            local corner = Instance.new("UICorner")
            corner.CornerRadius = UDim.new(0, 6)
            corner.Parent = button
            
            button.MouseButton1Click:Connect(function()
                config.Callback()
            end)
            
            return button
        end
        
        function Tab:CreateInput(config)
            config.Text = config.Text or "Input"
            config.Placeholder = config.Placeholder or "Type here..."
            config.Callback = config.Callback or function() end
            
            local container = Instance.new("Frame")
            container.Name = "InputContainer"
            container.Size = UDim2.new(1, 0, 0, 60) -- Altura reduzida
            container.BackgroundTransparency = 1
            container.LayoutOrder = #tabContent:GetChildren() + 1
            container.Parent = tabContent
            
            local label = Instance.new("TextLabel")
            label.Name = "Label"
            label.Size = UDim2.new(1, 0, 0, 18) -- Altura reduzida
            label.BackgroundTransparency = 1
            label.Text = config.Text
            label.TextColor3 = Color3.fromRGB(180, 180, 200)
            label.Font = Enum.Font.Gotham
            label.TextSize = 13 -- Tamanho menor
            label.TextXAlignment = Enum.TextXAlignment.Left
            label.Parent = container
            
            local inputFrame = Instance.new("Frame")
            inputFrame.Name = "InputFrame"
            inputFrame.Size = UDim2.new(1, 0, 0, 36) -- Altura reduzida
            inputFrame.Position = UDim2.new(0, 0, 0, 20)
            inputFrame.BackgroundColor3 = DARK_THEME.Card
            inputFrame.Parent = container
            
            local inputCorner = Instance.new("UICorner")
            inputCorner.CornerRadius = UDim.new(0, 6)
            inputCorner.Parent = inputFrame
            
            local textBox = Instance.new("TextBox")
            textBox.Name = "Input"
            textBox.Size = UDim2.new(1, -15, 1, 0)
            textBox.Position = UDim2.new(0, 8, 0, 0)
            textBox.BackgroundTransparency = 1
            textBox.PlaceholderText = config.Placeholder
            textBox.Text = ""
            textBox.TextColor3 = DARK_THEME.Text
            textBox.Font = Enum.Font.Gotham
            textBox.TextSize = 14 -- Tamanho menor
            textBox.TextXAlignment = Enum.TextXAlignment.Left
            textBox.Parent = inputFrame
            
            textBox.FocusLost:Connect(function()
                config.Callback(textBox.Text)
            end)
            
            return textBox
        end
        
        function Tab:CreateLabel(text)
            local label = Instance.new("TextLabel")
            label.Name = "InfoLabel"
            label.Size = UDim2.new(1, 0, 0, 24) -- Altura reduzida
            label.BackgroundTransparency = 1
            label.Text = text
            label.TextColor3 = DARK_THEME.Text
            label.Font = Enum.Font.Gotham
            label.TextSize = 14 -- Tamanho menor
            label.TextXAlignment = Enum.TextXAlignment.Left
            label.LayoutOrder = #tabContent:GetChildren() + 1
            label.Parent = tabContent
            
            return label
        end
        
        -- Seleciona a primeira aba por padrão
        if #tabsContainer:GetChildren() == 1 then
            tabButton.BackgroundColor3 = Color3.fromRGB(50, 50, 70)
            indicator.Visible = true
            tabContent.Visible = true
        end
        
        return Tab
    end
    
    return Window
end

return Library
