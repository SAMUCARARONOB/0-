local RNOX = {}

function RNOX:CreateWindow(config)
    local gui = Instance.new("ScreenGui")
    gui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
    gui.ResetOnSpawn = false

    local interfaceFrame = Instance.new("Frame")
    interfaceFrame.Size = UDim2.new(0, 0, 0, 0)
    interfaceFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
    interfaceFrame.AnchorPoint = Vector2.new(0.5, 0.5)
    interfaceFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    interfaceFrame.BorderSizePixel = 1
    interfaceFrame.BorderColor3 = Color3.fromRGB(255, 255, 255)
    interfaceFrame.Active = true
    interfaceFrame.Draggable = true
    interfaceFrame.Visible = true
    interfaceFrame.Parent = gui

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0.05, 0)
    corner.Parent = interfaceFrame

    local subtitle1 = Instance.new("TextLabel")
    subtitle1.Size = UDim2.new(1, -50, 0, 30)
    subtitle1.Position = UDim2.new(0, 10, 0, 50)
    subtitle1.BackgroundTransparency = 1
    subtitle1.Text = config.Subtitle1 or "Bem-vindo ao RNOX"
    subtitle1.TextColor3 = Color3.fromRGB(255, 255, 255)
    subtitle1.Font = Enum.Font.GothamBold
    subtitle1.TextSize = 18
    subtitle1.TextXAlignment = Enum.TextXAlignment.Center
    subtitle1.Parent = interfaceFrame

    local subtitle2 = Instance.new("TextLabel")
    subtitle2.Size = UDim2.new(1, -50, 0, 30)
    subtitle2.Position = UDim2.new(0, 10, 0, 90)
    subtitle2.BackgroundTransparency = 1
    subtitle2.Text = config.Subtitle2 or "Prepare-se para a interface"
    subtitle2.TextColor3 = Color3.fromRGB(255, 255, 255)
    subtitle2.Font = Enum.Font.GothamBold
    subtitle2.TextSize = 18
    subtitle2.TextXAlignment = Enum.TextXAlignment.Center
    subtitle2.Parent = interfaceFrame

    local hideButton = Instance.new("TextButton")
    hideButton.Size = UDim2.new(0, 100, 0, 30)
    hideButton.Position = UDim2.new(0.5, -50, 1, -40)
    hideButton.AnchorPoint = Vector2.new(0.5, 0.5)
    hideButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    hideButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    hideButton.Font = Enum.Font.GothamBold
    hideButton.TextSize = 14
    hideButton.Text = "Ocultar Interface"
    hideButton.Parent = interfaceFrame

    local hideButtonCorner = Instance.new("UICorner")
    hideButtonCorner.CornerRadius = UDim.new(0.05, 0)
    hideButtonCorner.Parent = hideButton

    local ballButton = Instance.new("ImageButton")
    ballButton.Size = UDim2.new(0, 50, 0, 50)
    ballButton.Position = UDim2.new(0.5, 0, 0.9, 0)
    ballButton.AnchorPoint = Vector2.new(0.5, 0.5)
    ballButton.BackgroundTransparency = 1
    ballButton.Image = "rbxassetid://14293471713"
    ballButton.Visible = false
    ballButton.Parent = gui

    function interfaceFrame:ShowAnimation()
        interfaceFrame.Size = UDim2.new(0, 0, 0, 0)
        interfaceFrame.Visible = true
        interfaceFrame:TweenSize(
            UDim2.new(0, 450, 0, 350),
            Enum.EasingDirection.Out,
            Enum.EasingStyle.Quad,
            0.5,
            true,
            function()
                wait(2.5)
                subtitle1.Visible = false
                subtitle2.Visible = false
            end
        )
    end

    function interfaceFrame:Hide()
        interfaceFrame.Visible = false
        ballButton.Visible = true
    end

    ballButton.MouseButton1Click:Connect(function()
        ballButton.Visible = false
        interfaceFrame:ShowAnimation()
    end)

    hideButton.MouseButton1Click:Connect(function()
        interfaceFrame:Hide()
    end)

    local window = {}

    function window:CreateButton(buttonConfig)
        local button = Instance.new("TextButton")
        button.Size = UDim2.new(1, 0, 0, 40)
        button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        button.BorderColor3 = Color3.fromRGB(255, 255, 255)
        button.BorderSizePixel = 1
        button.TextColor3 = Color3.fromRGB(255, 255, 255)
        button.Font = Enum.Font.GothamBold
        button.TextSize = 18
        button.Text = buttonConfig.Name or "Button"
        button.Parent = interfaceFrame

        local buttonCorner = Instance.new("UICorner")
        buttonCorner.CornerRadius = UDim.new(0.05, 0)
        buttonCorner.Parent = button

        button.MouseButton1Click:Connect(function()
            if buttonConfig.Callback then
                buttonConfig.Callback()
            end
        end)
    end

    function window:CreateToggle(toggleConfig)
        local toggleFrame = Instance.new("Frame")
        toggleFrame.Size = UDim2.new(1, 0, 0, 40)
        toggleFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 60)
        toggleFrame.BorderColor3 = Color3.fromRGB(0, 150, 255)
        toggleFrame.BorderSizePixel = 2
        toggleFrame.Parent = interfaceFrame

        local toggleCorner = Instance.new("UICorner")
        toggleCorner.CornerRadius = UDim.new(0.05, 0)
        toggleCorner.Parent = toggleFrame

        local label = Instance.new("TextLabel")
        label.Size = UDim2.new(0.7, 0, 1, 0)
        label.Position = UDim2.new(0, 10, 0, 0)
        label.BackgroundTransparency = 1
        label.Text = toggleConfig.Name or "Toggle"
        label.TextColor3 = Color3.fromRGB(255, 255, 255)
        label.Font = Enum.Font.GothamBold
        label.TextSize = 16
        label.TextXAlignment = Enum.TextXAlignment.Left
        label.Parent = toggleFrame

        local toggleButton = Instance.new("ImageButton")
        toggleButton.Size = UDim2.new(0, 30, 0, 30)
        toggleButton.Position = UDim2.new(1, -40, 0.5, -15)
        toggleButton.BackgroundTransparency = 1
        toggleButton.Image = "rbxassetid://14293471713"
        toggleButton.ImageColor3 = Color3.fromRGB(255, 0, 0)
        toggleButton.Parent = toggleFrame

        local isActive = false

        toggleButton.MouseButton1Click:Connect(function()
            isActive = not isActive
            toggleButton.ImageColor3 = isActive and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(255, 0, 0)

            if toggleConfig.Callback then
                toggleConfig.Callback(isActive)
            end
        end)
    end

    function window:CreateLabel(labelConfig)
        local label = Instance.new("TextLabel")
        label.Size = UDim2.new(1, 0, 0, 28)
        label.BackgroundTransparency = 1
        label.Text = labelConfig.Name or "Label"
        label.TextColor3 = Color3.fromRGB(200, 200, 200)
        label.Font = Enum.Font.Gotham
        label.TextSize = 14
        label.TextXAlignment = Enum.TextXAlignment.Left
        label.Parent = interfaceFrame
    end

    function window:CreateTextBox(textBoxConfig)
        local placeholderText = textBoxConfig.Placeholder or "Digite aqui"

        local textBox = Instance.new("TextBox")
        textBox.Size = UDim2.new(0, 100, 0, 28)
        textBox.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
        textBox.TextColor3 = Color3.fromRGB(255, 255, 255)
        textBox.Font = Enum.Font.Gotham
        textBox.TextSize = 14
        textBox.PlaceholderText = placeholderText
        textBox.Text = ""
        textBox.TextXAlignment = Enum.TextXAlignment.Left
        textBox.ClearTextOnFocus = false
        textBox.BorderColor3 = Color3.fromRGB(255, 255, 255)
        textBox.BorderSizePixel = 1
        textBox.Parent = interfaceFrame
        textBox.ClipsDescendants = true

        local textBoxCorner = Instance.new("UICorner")
        textBoxCorner.CornerRadius = UDim.new(0.2, 0)
        textBoxCorner.Parent = textBox

        textBox:GetPropertyChangedSignal("Text"):Connect(function()
            if textBox.Text ~= "" and textBoxConfig.Callback then
                textBoxConfig.Callback(textBox.Text)
            end
            if textBox.Text ~= "" then
                local textLength = string.len(textBox.Text)
                local newSize = UDim2.new(0, math.min(100 + textLength * 8, 400), 0, 28)
                textBox:TweenSize(newSize, Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.2, true)
            end
        end)
    end

    return window
end

return RNOX
