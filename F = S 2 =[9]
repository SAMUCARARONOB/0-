local Players=game:GetService("Players")local RunService=game:GetService("RunService")local TweenService=game:GetService("TweenService")local player=Players.LocalPlayer local gui=Instance.new("ScreenGui",player:WaitForChild("PlayerGui"))gui.Name="FuturisticSpy"gui.ResetOnSpawn=false local main=Instance.new("Frame",gui)main.Size=UDim2.new(0,475,0,275)main.Position=UDim2.new(0.5,-235,0.5,-135)main.BackgroundColor3=Color3.fromRGB(20,20,25)main.BorderSizePixel=0 main.Active=true main.Draggable=true Instance.new("UICorner",main).CornerRadius=UDim.new(0,14)local topLine=Instance.new("Frame",main)topLine.Size=UDim2.new(1,0,0,2)topLine.Position=UDim2.new(0,0,0,0)topLine.BackgroundColor3=Color3.fromRGB(0,200,255)local title=Instance.new("TextLabel",main)title.Size=UDim2.new(1,0,0,36)title.BackgroundColor3=Color3.fromRGB(15,15,18)title.TextColor3=Color3.new(1,1,1)title.Font=Enum.Font.GothamBold title.TextSize=22 title.Text="ðŸ›°ï¸ RANOX SPY | LUA" title.TextXAlignment=Enum.TextXAlignment.Center title.BorderSizePixel=0 local btnMin=Instance.new("TextButton",title)btnMin.Size=UDim2.new(0,35,0,28)btnMin.Position=UDim2.new(1,-75,0,4)btnMin.Text="-"btnMin.Font=Enum.Font.GothamBold btnMin.TextSize=20 btnMin.BackgroundColor3=Color3.fromRGB(40,40,50)btnMin.TextColor3=Color3.new(1,1,1)btnMin.BorderSizePixel=0 Instance.new("UICorner",btnMin).CornerRadius=UDim.new(0,8)local btnClose=Instance.new("TextButton",title)btnClose.Size=UDim2.new(0,35,0,28)btnClose.Position=UDim2.new(1,-35,0,4)btnClose.Text="X"btnClose.Font=Enum.Font.GothamBold btnClose.TextSize=18 btnClose.BackgroundColor3=Color3.fromRGB(180,50,50)btnClose.TextColor3=Color3.new(1,1,1)btnClose.BorderSizePixel=0 Instance.new("UICorner",btnClose).CornerRadius=UDim.new(0,8)local scroll=Instance.new("ScrollingFrame",main)scroll.Size=UDim2.new(1,-20,1,-50)scroll.Position=UDim2.new(0,10,0,45)scroll.BackgroundTransparency=1 scroll.ScrollBarThickness=8 scroll.CanvasSize=UDim2.new(0,0,0,0)local layout=Instance.new("UIListLayout",scroll)layout.SortOrder=Enum.SortOrder.LayoutOrder layout.Padding=UDim.new(0,10)layout.FillDirection=Enum.FillDirection.Vertical layout.VerticalAlignment=Enum.VerticalAlignment.Top local minimized=false btnMin.MouseButton1Click:Connect(function()minimized=not minimized local goalSize=minimized and UDim2.new(0,400,0,40)or UDim2.new(0,475,0,275)TweenService:Create(main,TweenInfo.new(0.3,Enum.EasingStyle.Quad),{Size=goalSize}):Play()if minimized then scroll.CanvasPosition=Vector2.new(0,0)end end)btnClose.MouseButton1Click:Connect(function()gui:Destroy()end)local function serialize(v)local t=typeof(v)if t=="string"then return("%q"):format(v)elseif t=="number"or t=="boolean"then return tostring(v)elseif t=="Vector3"then return("Vector3.new(%.2f, %.2f, %.2f)"):format(v.X,v.Y,v.Z)elseif t=="Color3"then return("Color3.new(%.2f, %.2f, %.2f)"):format(v.R,v.G,v.B)elseif t=="Instance"then return v:GetFullName()else return tostring(v)end end local function buildScript(remote,args)local path=remote:GetFullName()local method=remote:IsA("RemoteEvent")and"FireServer"or"InvokeServer"local argStrings={}for i,v in ipairs(args)do table.insert(argStrings,serialize(v))end return("game.%s:%s(%s)"):format(path,method,table.concat(argStrings,", "))end local buffer={} local function addLog(remote,args)local frame=Instance.new("Frame")frame.Size=UDim2.new(1,-8,0,170)frame.BackgroundColor3=Color3.fromRGB(35,35,40)frame.BorderSizePixel=0 frame.LayoutOrder=-tick()Instance.new("UICorner",frame).CornerRadius=UDim.new(0,10)frame.Parent=scroll local text=Instance.new("TextLabel",frame)text.Size=UDim2.new(1,-20,0,70)text.Position=UDim2.new(0,10,0,10)text.TextColor3=Color3.new(1,1,1)text.BackgroundTransparency=1 text.Font=Enum.Font.Code text.TextWrapped=true text.TextSize=14 text.Text=buildScript(remote,args) local function button(txt,posY,posX,col)local b=Instance.new("TextButton",frame)b.Size=UDim2.new(0.3,0,0,24)b.Position=UDim2.new(posX,0,posY,0)b.BackgroundColor3=col b.Text=txt b.Font=Enum.Font.GothamBold b.TextSize=13 b.TextColor3=Color3.new(1,1,1)b.BorderSizePixel=0 Instance.new("UICorner",b).CornerRadius=UDim.new(0,6)return b end local btnExec=button("Executar",0.58,0.02,Color3.fromRGB(0,180,100))btnExec.MouseButton1Click:Connect(function()pcall(function()if remote:IsA("RemoteEvent")then remote:FireServer(unpack(args))else remote:InvokeServer(unpack(args))end end)end) local btnCopy=button("Copiar",0.58,0.35,Color3.fromRGB(60,120,255))btnCopy.MouseButton1Click:Connect(function()if setclipboard then setclipboard(text.Text)btnCopy.Text="Copiado!"task.delay(1.5,function()btnCopy.Text="Copiar"end)end end) local btnLoop=button("Auto OFF",0.58,0.68,Color3.fromRGB(180,50,50))local looping=false local conn btnLoop.MouseButton1Click:Connect(function()looping=not looping btnLoop.Text=looping and"Auto ON"or"Auto OFF"btnLoop.BackgroundColor3=looping and Color3.fromRGB(0,180,100)or Color3.fromRGB(180,50,50)if looping then conn=RunService.Heartbeat:Connect(function()pcall(function()if remote:IsA("RemoteEvent")then remote:FireServer(unpack(args))else remote:InvokeServer(unpack(args))end end)end)elseif conn then conn:Disconnect()end end) local btnDecompiler=button("DECOMPILAR",0.82,0.02,Color3.fromRGB(200,130,255))btnDecompiler.MouseButton1Click:Connect(function()local out="-- Decompilado: "..(remote:IsA("RemoteEvent")and"RemoteEvent"or"RemoteFunction").."\n"..buildScript(remote,args)print(out)if setclipboard then setclipboard(out)btnDecompiler.Text="Copiado!"task.delay(1.5,function()btnDecompiler.Text="DECOMPILAR"end)end end) local btnRemove=button("Excluir Este Log",0.82,0.35,Color3.fromRGB(180,50,50)) btnRemove.MouseButton1Click:Connect(function()frame:Destroy()end) local btnRemoveAll=button("Excluir Todos",0.82,0.68,Color3.fromRGB(180,50,50)) btnRemoveAll.MouseButton1Click:Connect(function() for _,v in pairs(scroll:GetChildren())do if v:IsA("Frame")then v:Destroy()end end end) local originalHeight=frame.Size local collapsed=false local lastMouse=tick() local uis=game:GetService("UserInputService") frame.MouseEnter:Connect(function()lastMouse=tick()end) frame.MouseLeave:Connect(function()lastMouse=tick()end) task.spawn(function() while frame.Parent do if not collapsed and tick()-lastMouse>2 then collapsed=true TweenService:Create(frame,TweenInfo.new(0.3),{Size=UDim2.new(1,-8,0,35)}):Play()for _,v in pairs(frame:GetChildren())do if v:IsA("TextButton")then v.Visible=false end end text.Position=UDim2.new(0,10,0,8) text.Size=UDim2.new(1,-20,1,-8) elseif collapsed and tick()-lastMouse<=2 then collapsed=false TweenService:Create(frame,TweenInfo.new(0.3),{Size=originalHeight}):Play()for _,v in pairs(frame:GetChildren())do if v:IsA("TextButton")then v.Visible=true end end text.Position=UDim2.new(0,10,0,10) text.Size=UDim2.new(1,-20,0,70)end task.wait(0.1)end end)scroll.CanvasSize=UDim2.new(0,0,0,layout.AbsoluteContentSize.Y+10)end local oldNamecall oldNamecall=hookmetamethod(game,"__namecall",function(self,...)local method=getnamecallmethod()local args={...}if not checkcaller()and(method=="FireServer"or method=="InvokeServer")then table.insert(buffer,1,{remote=self,args=args})end return oldNamecall(self,...)end) task.spawn(function()while true do if #buffer>0 then local data=table.remove(buffer)local ok,err=pcall(addLog,data.remote,data.args)if not ok then warn("Erro:",err)end else task.wait(0.1)end end end)
